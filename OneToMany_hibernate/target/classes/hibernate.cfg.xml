<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">org.mariadb.jdbc.Driver</property> 
		<property name="hibernate.connection.url">jdbc:mariadb://localhost:3306/springdb</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">root</property>
		
		<property name="hibernate.dialect">org.hibernate.dialect.MariaDB10Dialect</property>
		<property name="show_sql">true</property>
		<property name="hibernate.hbm2ddl.auto">update</property>
		 
		<mapping class="com.demo.hibernate.entity.Emp" />
		<mapping class="com.demo.hibernate.entity.Address" />
		<!-- <mapping package="com.demo.hibernate.entity.*" /> -->
	</session-factory>

</hibernate-configuration>